$(info The name of the shared library to be created is: $(SHLIB))

CXX_STD = CXX11

PKG_CXXFLAGS = -I. @OPENCL_FLAGS@ @SIMD_FLAGS@

PKG_LIBS += $(shell ${R_HOME}/bin/Rscript -e "RcppParallel::RcppParallelLibs()") @OPENCL_LIB@

SOURCES = mds.cpp \
	        RcppExports.cpp \
	        factory.cpp \
	        backend/opencl/instantiate.cpp

OBJECTS = $(SOURCES:.cpp=.o)

all: $(SHLIB)
$(SHLIB): mds.o

